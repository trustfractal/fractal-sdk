{
  "compilerOptions": {
    "outDir": "./build",
    "lib": ["es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@services/*": ["src/services/*"]
    }
  },
  "include": ["src/**/*"]
}
