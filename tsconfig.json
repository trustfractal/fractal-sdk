{
  "compilerOptions": {
    "outDir": "./build",
    "lib": ["es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "baseUrl": "."
  },
  "include": ["src/**/*", "src/**/*.json"]
}
