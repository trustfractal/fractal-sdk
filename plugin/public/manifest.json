{
  "author": "https://www.trustfractal.com",
  "manifest_version": 3,
  "version": "0.0.1",
  "short_name": "Fractal ID Wallet",
  "name": "Fractal ID Wallet",
  "description": "The Fractal ID Wallet is a browser extension that lets users receive staking rewards for issuing a credential to a DID contract.",
  "action": {
    "default_title": "Fractal ID Wallet",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon_16.png",
      "19": "img/icon_19.png",
      "32": "img/icon_32.png",
      "38": "img/icon_38.png",
      "64": "img/icon_64.png",
      "128": "img/icon_128.png",
      "512": "img/icon_512.png"
    }
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js": ["contentScript.bundle.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "resources": ["sdk.bundle.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "img/icon_16.png",
    "19": "img/icon_19.png",
    "32": "img/icon_32.png",
    "38": "img/icon_38.png",
    "64": "img/icon_64.png",
    "128": "img/icon_128.png",
    "512": "img/icon_512.png"
  },
  "permissions": ["activeTab", "tabs", "storage"]
}
